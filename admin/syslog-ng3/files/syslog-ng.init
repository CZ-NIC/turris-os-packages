# Copyright (C) 2006-2011 OpenWrt.org

START=50

USE_PROCD=1

start_service() {
	[ -f /etc/syslog-ng.conf ] || return 1
	procd_open_instance
	procd_set_param command /usr/sbin/syslog-ng -F
	procd_set_param respawn
	procd_close_instance
}

reload_service() {
        stop
        start
}
